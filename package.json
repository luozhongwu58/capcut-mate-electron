{
  "name": "guangying-capcut-mate",
  "productName": "【光影】【光影】剪映小助手",
  "version": "1.0.4",
  "description": "【光影】剪映草稿自动化下载工具",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-all": "electron-builder -mw"
  },
  "keywords": [],
  "author": "guangying",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.guangying.capcutmate",
    "productName": "【光影】【光影】剪映小助手",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "ui/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icons/logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "【光影】【光影】剪映小助手",
      "installerIcon": "assets/icons/logo.ico",
      "uninstallerIcon": "assets/icons/logo.ico",
      "installerHeaderIcon": "assets/icons/logo.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "assets/icons/logo.icns",
      "category": "public.app-category.utilities"
    }
  }
}
